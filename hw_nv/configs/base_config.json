{
    "name": "base_config",
    "n_gpu": 1,
    "arch": {
        "type": "HiFiGAN",
        "args": {
        }
    },
    "dataset": {
        "type": "LJSpeechDataset",
        "args": {
            "part": "train",
            "max_len": 8192
        }
    },
    "dataloader": {
        "type": "DataLoader",
        "args":{
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 0
        }
    },
    "optimizer_g": {
        "type": "AdamW",
        "args":{
            "lr": 0.0002,
            "betas": [0.8, 0.98]
        }
    },
    "optimizer_d": {
        "type": "AdamW",
        "args":{
            "lr": 0.0002,
            "betas": [0.8, 0.98]
        }
    },
    "lr_scheduler_g": {
        "type": "ExponentialLR",
        "args": {
            "gamma": 0.999
        }
    },
    "lr_scheduler_d": {
        "type": "ExponentialLR",
        "args": {
            "gamma": 0.999
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        "log_step": 5,
        "grad_norm_clip": 1.0,
        "monitor": "min val_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "wandb_project": "nv_project"
    }
}